<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<Button
    android:id="@+id/NewFriend"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:drawableLeft="@drawable/newfriend"
    android:text="申请列表"
    android:paddingTop="5dp"
    android:paddingRight="200dp"
    android:paddingBottom="5dp"
    android:background="#FAFAFA"
    />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/nav_layout"
        android:background="@color/grays" />

    <Button
        android:id="@+id/MyFriend"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/myfriend"
        android:text="我的影友"
        android:paddingTop="5dp"
        android:paddingRight="200dp"
        android:paddingBottom="5dp"
        android:background="#FAFAFA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/nav_layout"
        android:background="@color/grays" />

    <Button
        android:id="@+id/MyGroup"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/group"
        android:text="我的群组"
        android:paddingTop="5dp"
        android:paddingRight="200dp"
        android:paddingBottom="5dp"
        android:background="#FAFAFA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/nav_layout"
        android:background="@color/grays" />

    <Button
        android:id="@+id/Answer"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/answer"
        android:text="帖子回复"
        android:paddingTop="5dp"
        android:paddingRight="200dp"
        android:paddingBottom="5dp"
        android:background="#FAFAFA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/nav_layout"
        android:background="@color/grays" />



</LinearLayout>